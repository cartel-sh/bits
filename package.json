{
  "name": "bits",
  "author": "kualta <contact@kualta.dev>",
  "description": "kuhaku agents",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "dashboard:dev": "vite",
    "dashboard:build": "tsc -b && vite build",
    "dashboard:preview": "vite preview",
    "format": "bunx @biomejs/biome format --write ./dash/* ./bits/* ./core/*",
    "lint": "bunx @biomejs/biome lint --write --unsafe ./dash/* ./bits/* ./core/*",
    "check": "bunx @biomejs/biome check --write ./dash/* ./bits/* ./core/*",
    "db:init": "bun run ./core/database/init.ts",
    "db:migrate": "bun run ./core/database/migrate.ts",
    "db:drizzle": "bunx drizzle-kit generate",
    "db:test": "bun run ./core/database/test.ts",
    "kudasai": "bun run ./bits/kudasai/index.ts",
    "sakura": "bun run ./bits/sakura/index.ts",
    "kumiko": "bun run ./bits/kumiko/index.ts",
    "onjo": "bun run ./bits/onjo/index.ts",
    "dev:kudasai": "bun run --watch ./bits/kudasai/index.ts",
    "dev:sakura": "bun run --watch ./bits/sakura/index.ts",
    "dev:kumiko": "bun run --watch ./bits/kumiko/index.ts",
    "dev:onjo": "bun run --watch ./bits/onjo/index.ts"
  },
  "dependencies": {
    "@discordjs/rest": "^2.4.3",
    "@google/generative-ai": "^0.21.0",
    "@kobalte/core": "^0.13.9",
    "@supabase/supabase-js": "^2.48.1",
    "@types/luxon": "^3.4.2",
    "@types/redis": "^4.0.10",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "discord-api-types": "^0.37.119",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "express": "^4.21.2",
    "luxon": "^3.5.0",
    "node-telegram-bot-api": "^0.66.0",
    "postgres": "^3.4.5",
    "redis": "^4.7.0",
    "solid-js": "^1.9.5",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "^1.2.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.1",
    "autoprefixer": "^10.4.20",
    "bun-types": "latest",
    "drizzle-kit": "^0.30.5",
    "instant-cli": "^0.17.12",
    "postcss": "^8.5.3",
    "tailwindcss": "3",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vite-plugin-solid": "^2.11.2"
  },
  "module": "index.ts",
  "type": "module",
  "trustedDependencies": ["@biomejs/biome", "esbuild"]
}
